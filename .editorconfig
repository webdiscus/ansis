root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
tab_width = 2

[{*.cjs,*.js}]
indent_size = 2
tab_width = 2

[{*.htm,*.html,*.md}]
indent_size = 2
tab_width = 2

[{LICENSE,*.json,*.md}]
insert_final_newline = false

[{package.npm.json,dist/**}]
indent_style = tab